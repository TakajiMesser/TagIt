<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<item name="toolbarStyle">@style/AppTheme.PopupOverlay</item> -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:datePickerMode">spinner</item>
  </style>

  <style name="AppBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

  </style>

  <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
    <item name="android:textColorPrimary">#E8F5E9</item>
    <item name="android:background">@drawable/toolbar_background</item>
  </style>

  <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">#E8F5E9</item>
    <item name="android:background">@drawable/toolbar_background</item>
  </style>

  <style name="ProgressDialogTheme" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">#FFFFFF</item>
    <item name="android:textColorPrimary">#E8F5E9</item>
    <item name="android:background">@drawable/rounded_border_dark</item>
    <item name="android:textSize">16dp</item>
  </style>

  <style name="AlertsDialogTheme" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">#C8E6C9</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textColorPrimary">#E8F5E9</item>
    <item name="android:textColorSecondary">#FEFF87</item>
    <item name="android:textSize">18dp</item>
  </style>

  <style name="PrefsTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/prefs_bg</item>
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textColorSecondary">#FEFF87</item>
    <item name="android:editTextStyle">@style/editTextPrefs</item>
    <item name="android:listViewStyle">@style/listViewPrefs</item>
    <item name="android:dialogTheme">@style/dialogPrefs</item>
    <item name="android:alertDialogTheme">@style/dialogPrefs</item>
    <item name="android:timePickerStyle">@style/timePickerPrefs</item>
    <item name="android:windowActionBar">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:timePickerMode">spinner</item>
  </style>

  <style name="dialogPrefs" parent="Theme.AppCompat.Dialog">
    <item name="android:textColor">#FFFFFF</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:textColorSecondary">#FEFF87</item>
    <item name="colorPrimary">#FEFF87</item>
    <item name="colorPrimaryDark">#FFFFFF</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@drawable/rounded_border_dark</item>
    <item name="android:cacheColorHint">@color/prefs_bg</item>
    <item name="android:timePickerMode">spinner</item>
  </style>

  <style name="editTextPrefs" parent="android:Widget.EditText">
    <item name="android:textColor">#FFFFFF</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="listViewPrefs" parent="@android:style/Widget.ListView">
    <item name="android:background">@color/prefs_bg</item>
    <item name="android:cacheColorHint">@color/prefs_bg</item>
  </style>

  <style name="timePickerPrefs" parent="android:Widget.Material.TimePicker">
    <item name="android:timePickerMode">spinner</item>
  </style>

</resources>
